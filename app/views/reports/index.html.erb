<h1>Listing reports</h1>

<table class="table table-bordered">
  <tr>
    <th>Atm</th>
    <th>Type</th>
    <th>Reported at</th>
    <th>Status</th>
    <th></th>
    <th></th>
  </tr>

<% @reports.each do |report| %>
  <tr>
    <td><%= report.atm_id %></td>
    <td><%= report.type_id %></td>
    <td><%= report.reported_at %></td>
    <td><%= report.status %></td>
    <td><%= link_to 'Edit', edit_report_path(report), :class => 'btn btn-small' %></td>
    <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-small btn-danger' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Report', new_report_path, :class => 'btn btn-primary' %>
