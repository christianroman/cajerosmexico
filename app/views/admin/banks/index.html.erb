<h1>Listing banks</h1>

<table class="table table-bordered">
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
  </tr>

<% @banks.each do |bank| %>
  <tr>
    <td><%= link_to bank.name, admin_bank_path(bank) %></td>
    <td><%= link_to 'Edit', edit_admin_bank_path(bank), :class => "btn btn-small" %></td>
    <td><%= link_to 'Destroy', [:admin, bank], method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-small btn-danger" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Bank', new_admin_bank_path, :class => "btn btn-primary"  %>
